{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "rules": {
        "max-len": ["error", { "code": 200 }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-console": 0,
        "no-param-reassign": 0,
        "consistent-return": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "prefer-destructuring": ["error", {
            "array": false,
            "object": false
        }, {"enforceForRenamedProperties": false}],
        "comma-dangle": ["error", "never"]
    }
}